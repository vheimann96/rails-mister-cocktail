<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo %>')">
    <h1><%=@cocktail.name%></h1>
</div>
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="cocktail my-5">
        <div class="d-flex justify-content-center">
          <p> <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, class: 'img-cocktail' %> </p>
          <div class="ingredient">
            <h2>Add a new Ingredient</h2>
             <% @cocktail.doses.each do |dose| %>
              <p class="d-flex justify-content-between">
                <%= dose.description  %> <%= dose.ingredient.name %>
                  <%= link_to  dose_path(dose), method: :delete do  %>
                    <i class="fas fa-trash"></i>
                  <% end %>
              </p>
             <% end %>
           </div>
          </div>
          <div class="d-flex justify-content-between">
            <p><%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: 'btn bottom'%></p>
            <p><%= link_to 'Back', cocktails_path, class: 'btn bottom'  %></p>
          </div>
        </div>
      </div>
  </div>


