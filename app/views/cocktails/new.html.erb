<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "skyline.jpg" %>')">
    <h1>Mix your new Cocktail</h1>
</div>

  <div class="container my-3" >
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Add a Cocktail", class: "btn addbutton btn-block"%>
    <% end %>
  </div>

