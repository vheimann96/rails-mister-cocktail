
<div class="container">
<h1>Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-3">
      <div class="card my-5">
          <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        </div>
      </div>
     <% end %>
  </div>

  <%= link_to 'Mix a Cocktail', new_cocktail_path, class: 'btn btn-primary' %>
</div>
