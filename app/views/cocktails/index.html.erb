
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "mary-rebecca-elliott-233485-unsplash.jpg" %>')">
  <h1>Cocktails</h1>
</div>
  <p><%= link_to 'Mix a Cocktail', new_cocktail_path, class: 'btn btn-outline-light btn-block mixbutton' %></p>
  <div class="container" >
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-3">
        <div class="my-3">
          <div class="img-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo %>')"></div>
          <p><%= link_to cocktail.name, cocktail_path(cocktail), class: 'name' %></p>
          <p><%= link_to 'x', cocktail_path(cocktail), method: :delete, data: {:confirm =>
            "Are you sure you want to delete this cocktail?"}, class: 'delete' %> </p>
          </div>
        </div>
       <% end %>
    </div>
  </div>



